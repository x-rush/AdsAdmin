<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfc5c5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lianmen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/lianmen" />

            <TextView
                android:id="@+id/tv_lianmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="联盟"
                android:textColor="#8a8a8a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/club"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/club" />

            <TextView
                android:id="@+id/tv_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#8a8a8a"
                android:text="俱乐部" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/train"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/train" />

            <TextView
                android:id="@+id/tv_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#8a8a8a"
                android:text="训练" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shaitu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shaitu" />

            <TextView
                android:id="@+id/tv_shaitu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#8a8a8a"
                android:text="晒图" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mine" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#8a8a8a"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>